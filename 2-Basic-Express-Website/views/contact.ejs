<!DOCTYPE html>
<html>
  	<head>
    	<title><%= title%>Express Website</title>
    	<link rel='stylesheet' href='/stylesheets/style.css' />
		<link rel="stylesheet" href="/stylesheets/bootstrap.min.css">
  	</head>
  	<body>

		<%- include('header'); %>

	    <div class="container">
			<form action="contact/send" method="POST" class="form-horizontal">
				<fieldset>
					<legend><h1>Contact</h1></legend>
					<div class="form-groub">
						<label for="inputText" class="col-xs-12 control-label"><h4 class="text-left">Name</h4></label>
						<div class="col-xs-12">
							<input type="text" class="form-control" name="name" placeholder="Enter your name">
						</div>
					</div>
					<div class="form-groub">
						<label for="inputEmail" class="col-xs-12 control-label"><h4 class="text-left">Email</h4></label>
					    <div class="col-xs-12">
					        <input type="text" class="form-control" name="email" placeholder="Enter your e-mail">
					    </div>
					</div>
					<div class="form-groub">
						<label for="textArea" class="col-xs-12 control-label"><h4 class="text-left">Textarea</h4></label>
					    <div class="col-xs-12">
					        <textarea class="form-control" rows="3" name="message"></textarea><grammarly-btn><div data-reactroot="" class="_e725ae-textarea_btn _e725ae-not_focused" style="z-index: 2; transform: translate(884.792px, 56.6667px);"><div class="_e725ae-transform_wrap"><div title="Protected by Grammarly" class="_e725ae-status">&nbsp;</div></div></div></grammarly-btn>
					    </div>
					</div>

					<div class="form-group">
				      	<div class="col-xs-12">
							<br>
							<br>
				    		<button type="submit" class="btn btn-primary">Submit</button>
				      	</div>
				    </div>
				</fieldset>
			</form>

    	</div>

		<%- include('footer'); %>


		<!-- Bootstrap core JavaScript
		================================================== -->
		<!-- Placed at the end of the document so the pages load faster -->
		<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>
		<script src="/javascripts/bootstrap.min.js"></script>
  	</body>
</html>
