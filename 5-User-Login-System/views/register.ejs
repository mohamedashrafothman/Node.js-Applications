<% include partials/header %>
        <div class="jumbotron">

            <div class="container">
                <h1><%= title %></h1>
                <p>please register using the form below</p>
                <hr>
                <form action="/user/register" method="post" enctype="multipart/form-data">
                    <div class="form-group">
                        <label><h5>Name</h5></label>
                        <input type="text" name="name" placeholder="Enter your name." class="form-control">
                    </div>
                    <div class="form-group">
                        <label><h5>Email</h5></label>
                        <input type="text" name="email" placeholder="Enter your Email." class="form-control">
                    </div>
                    <div class="form-group">
                        <label><h5>Username</h5></label>
                        <input type="text" name="username" placeholder="Enter your Username." class="form-control">
                    </div>
                    <div class="form-group">
                        <label><h5>Password</h5></label>
                        <input type="text" name="password1" placeholder="Enter your Password." class="form-control">
                    </div>
                    <div class="form-group">
                        <label><h5>Confir Password</h5></label>
                        <input type="text" name="password2" placeholder="Confirm your Password." class="form-control">
                    </div>
                    <div class="form-group">
                        <label><h5>Profile Image</h5></label>
                        <input type="file" name="profile-image " class="form-control">
                    </div>
                    <input type="submit" name="submit" value="Register" class="btn btn-primary  ">

                </form>
            </div>
        </div>
<% include partials/footer %>
